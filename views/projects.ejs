<%- include("partials/header") -%>
<div class="album py-5 bg-light">
  <div class="container">
    <h1 class="display-5 fw-bold">All Projects</h1>
    <div class="row">
      <% for (var i = projects.length - 1; i >= 0; i--) { %>
      <div class="col-lg-4 col-md-6">
        <div class="card mb-4 box-shadow">
          <a href="/projects/<%=projects[i].id%>">
            <img class="card-img-top img-thumbnail" src="/<%=projects[i].images[0].path%>" alt="Card image cap">
          </a>
          <div class="card-body">
            <h4>
              <%= projects[i].title %>
            </h4>
            <p class="card-text"> <%=projects[i].techStacks%> </p>

            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <a href="<%=projects[i].githubLink%>" class="btn btn-sm btn-outline-secondary">Github</a>
                <a href="<%=projects[i].demoLink%>" class="btn btn-sm btn-outline-secondary<% if (!projects[i].demoLink) { %> disabled<% } %>">Demo</a>
                <a href="location.href='/projects/<%=projects[i].id%>" class="btn btn-sm btn-outline-secondary">More info</a>
              </div>
              <% if (isAdmin) { %>
              <div class="btn-group">
                <button type="button" onclick="location.href='/admin/edit/<%=projects[i].id%>'" class="btn btn-sm btn-primary">Edit</button>
                <form action="/admin/delete/<%=projects[i].id%>" method="post">
                  <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
              </DIV>
              <% } %>
            </div>
          </div>
        </div>
      </div><%};%>
    </div>
  </div>
</div>
<%- include("partials/footer") -%>
