<%- include("partials/header") -%>
<div class="album py-5 bg-light">
  <div class="container">
    <h1 class="display-5 fw-bold">All Projects</h1>
    <div class="row">
      <% projects.forEach(function(project) { %>
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
            <img class="card-img-top img-thumbnail" src="<%=project.images[0].path%>" alt="Card image cap">
            <div class="card-body">
              <h4>
                  <%= project.title %>
                </h4>
              <p class="card-text"> <%=project.techStacks%> </p>

              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button onclick="location.href='<%=project.githubLink%>'" type="button" class="btn btn-sm btn-outline-secondary">Github</button>
                  <button type="button" onclick="location.href='<%=project.demoLink%>'" class="btn btn-sm btn-outline-secondary<% if (!project.demoLink) { %> disabled<% } %>">Demo</button>
                  <button type="button" onclick="location.href='/projects/<%=project.id%>'" class="btn btn-sm btn-outline-secondary">More info</button>
                  </div>
                  <% if (isAdmin) { %>
                    <div class="btn-group">
                    <button type="button" onclick="location.href='/admin/edit/<%=project.id%>'" class="btn btn-sm btn-primary">Edit</button>
                    <button type="button" onclick="location.href='/admin/delete/<%=project.id%>'" class="btn btn-sm btn-danger">Delete</button>
                    </DIV>
                  <% } %>
                <small class="text-muted"><%=project.date%></small>
              </div>
            </div>
          </div>
        </div><%});%>
    </div>
  </div>
</div>
<%- include("partials/footer") -%>
